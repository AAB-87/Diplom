package ru.netology.fmhandroid.viewmodel

import FmhRepositoryImp
import android.app.Application
import androidx.lifecycle.AndroidViewModel
import ru.netology.fmhandroid.repository.*

class FmhViewModel(application: Application) : AndroidViewModel(application) {
    private val repository: FmhRepository = FmhRepositoryImp()

    fun getNews() = repository.getNews()
    fun getPatients() = repository.getPatients()
    fun getNotes(id: Long) = repository.getNotes(id)
}