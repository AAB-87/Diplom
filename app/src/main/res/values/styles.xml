<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="page_title">
        <item name="android:textSize">
            20sp
        </item>
        <item name="android:letterSpacing">
            0.01
        </item>
        <item name="android:textColor">
            #FFFFFF
        </item>
    </style>

    <style name="patients">
        <item name="android:textSize">
            24sp
        </item>
        <item name="android:textColor">
            #000000
        </item>
    </style>

    <style name="patients_list_style">
        <item name="android:textSize">
            14sp
        </item>
        <item name="android:letterSpacing">
            0.01
        </item>
        <item name="android:textColor">
            #8A000000
        </item>
    </style>

    <style name="location">
        <item name="android:textSize">
            14sp
        </item>
        <item name="android:letterSpacing">
            0.01
        </item>
        <item name="android:textColor">
            #8A000000
        </item>
    </style>

    <style name="recyclerPatientsListStyle">
        <item name="android:textSize">
            14sp
        </item>
        <item name="android:letterSpacing">
            0.01
        </item>
        <item name="android:textColor">
            #DE000000
        </item>
    </style>

    <style name="patientsListLocationStyle">
        <item name="android:textSize">
            14sp
        </item>
        <item name="android:letterSpacing">
            0.01
        </item>
        <item name="android:textColor">
            #8A000000
        </item>
    </style>

    <style name="new_patient_style">
        <item name="android:textSize">
            24sp
        </item>

        <item name="android:letterSpacing">
            0.01
        </item>

        <item name="android:textColor">
            #DE000000
        </item>
    </style>

    <style name="new_patient_name_style">
        <item name="android:textSize">
            16sp
        </item>
        <item name="android:letterSpacing">
            0.01
        </item>
    </style>

    <style name="cancel_button_style">
        <item name="android:textSize">
            14sp
        </item>
        <item name="android:letterSpacing">
            0.03
        </item>
        <item name="android:textColor">
            #DE000000
        </item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="AppNormalButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SmallLightGreyTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/half_light_grey</item>
    </style>

    <style name="SmallBlackTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LargeBlackTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="card_label_style">
        <item name="android:textSize">
            14sp
        </item>
        <item name="android:textColor">
            #535353
        </item>
        <item name="android:layout_marginTop">
            6dp
        </item>
        <item name="android:layout_marginBottom">
            6dp
        </item>
    </style>

    <style name="card_text_style">
        <item name="android:textSize">
            16sp
        </item>
        <item name="android:textColor">
            #DE000000
        </item>
        <item name="android:layout_marginTop">
            6dp
        </item>
        <item name="android:layout_marginBottom">
            6dp
        </item>
    </style>

    <style name="card_divider_style">
        <item name="android:background">
            #14000000
        </item>
        <item name="android:layout_marginTop">
            6dp
        </item>
    </style>

    <style name="WishLabelTextStyle">
        <item name="android:textSize"> 13sp </item>
        <item name="android:textColor"> #535353 </item>
    </style>

    <style name="WishPatientAndExecutorTextSize">
        <item name="android:textSize"> 16sp </item>
        <item name="android:textColor"> @color/half_black </item>
    </style>

    <style name="WishPlanTimeTextStyle">
        <item name="android:textSize"> 12sp </item>
        <item name="android:textColor"> #878787 </item>
    </style>
    
    <style name="BottomToolbarTextStyle">
        <item name="android:textSize"> 18sp </item>
        <item name="android:textColor"> @color/black </item>
    </style>

    <style name="EmptyListTextStyle">
        <item name="android:textSize"> 16sp </item>
        <item name="android:textColor"> #878787 </item>
    </style>

    <style name="materialButtonTheme" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="iconPadding">0dp</item>
        <item name="android:minWidth">18dp</item>
        <item name="android:minHeight">18dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30%</item>
    </style>

</resources>