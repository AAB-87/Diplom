<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/card_view_padding"
    android:layout_gravity="center"
    android:elevation="@dimen/card_view_padding"
    android:id="@+id/claim_filter_dialog_layout">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/claim_filter_dialog_title"
        style="@style/FilteringTitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/item_filter_open"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/open"
        android:textAlignment="center"
        android:checked="false"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/claim_filter_dialog_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/item_filter_in_progress"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/in_progress"
        android:textAlignment="center"
        android:checked="false"
        android:layout_marginTop="@dimen/card_view_padding"
        app:layout_constraintTop_toBottomOf="@id/item_filter_open"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/item_filter_executed"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/executed"
        android:textAlignment="center"
        android:checked="false"
        android:layout_marginTop="@dimen/card_view_padding"
        app:layout_constraintTop_toBottomOf="@id/item_filter_in_progress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/item_filter_cancelled"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/cancelled"
        android:textAlignment="center"
        android:checked="false"
        android:layout_marginTop="@dimen/card_view_padding"
        app:layout_constraintTop_toBottomOf="@id/item_filter_executed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>