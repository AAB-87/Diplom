<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="134dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="@dimen/card_item_elevation"
    android:layout_margin="@dimen/padding_between_elements"
    app:strokeColor="#01A19F"
    app:strokeWidth="2dp"
    android:id="@+id/note_card_item_for_list">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/card_view_padding">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title_material_text_view"
            style="@style/NoteLabelTextStyle"
            android:layout_width="68dp"
            android:layout_height="16dp"
            android:text="@string/topic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/description_material_text_view"
            style="@style/NotePatientAndExecutorTextSize"
            android:layout_width="200dp"
            android:layout_height="18dp"
            android:textAlignment="viewStart"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@sample/note.json/data/description"/>

        <ImageView
            android:id="@+id/top_divider_image_view"
            android:layout_width="@dimen/line_divider_width"
            android:layout_height="@dimen/line_divider_height"
            android:layout_marginTop="@dimen/note_card_divider_margin"
            android:background="@color/half_light_grey"
            android:contentDescription="@string/line_divider_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_material_text_view" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/patient_name_label_material_text_view"
            style="@style/NoteLabelTextStyle"
            android:layout_width="59dp"
            android:layout_height="16dp"
            android:layout_marginTop="@dimen/note_card_divider_margin"
            android:text="@string/note_patient_label"
            android:textAlignment="viewStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_divider_image_view" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/patient_name_material_text_view"
            style="@style/NotePatientAndExecutorTextSize"
            android:layout_width="200dp"
            android:layout_height="18dp"
            android:layout_marginTop="@dimen/note_card_divider_margin"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAlignment="viewEnd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_divider_image_view"
            tools:text="@sample/posts.json/data/patient" />

        <ImageView
            android:id="@+id/middle_divider_image_view"
            android:layout_width="@dimen/line_divider_width"
            android:layout_height="@dimen/line_divider_height"
            android:layout_marginTop="@dimen/note_card_divider_margin"
            android:background="@color/half_light_grey"
            android:contentDescription="@string/line_divider_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/patient_name_material_text_view" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/executor_name_label_material_text_view"
            style="@style/NoteLabelTextStyle"
            android:layout_width="91dp"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"
            android:text="@string/note_executor_label"
            android:textAlignment="viewStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/middle_divider_image_view" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/executor_name_material_text_view"
            style="@style/NotePatientAndExecutorTextSize"
            android:layout_width="200dp"
            android:layout_height="18dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAlignment="viewEnd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/middle_divider_image_view"
            tools:text="@sample/posts.json/data/executor" />

        <ImageView
            android:id="@+id/bottom_divider_image_view"
            android:layout_width="@dimen/line_divider_width"
            android:layout_height="@dimen/line_divider_height"
            android:layout_marginTop="@dimen/note_card_divider_margin"
            android:background="@color/half_light_grey"
            android:contentDescription="@string/line_divider_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/executor_name_material_text_view" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/plan_date_label_material_text_view"
            style="@style/NoteLabelTextStyle"
            android:layout_width="97dp"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"
            android:text="@string/plan_date"
            android:textAlignment="viewStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottom_divider_image_view" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/plan_date_material_text_view"
            style="@style/NotePatientAndExecutorTextSize"
            android:layout_width="84dp"
            android:layout_height="18dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAlignment="viewEnd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottom_divider_image_view"
            tools:text="@sample/posts.json/data/edited" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/plan_time_material_text_view"
            style="@style/NotePlanTimeTextStyle"
            android:textAlignment="center"
            android:layout_width="41dp"
            android:layout_height="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/plan_date_material_text_view"
            app:layout_constraintEnd_toStartOf="@+id/plan_date_material_text_view"
            tools:text="21-00"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>