<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="@dimen/card_item_elevation"
    android:layout_margin="@dimen/padding_between_elements"
    android:id="@+id/note_card_item_for_list">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_between_elements">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/note_priority_indicator_shapeable_image_view"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/note_card_item_menu_image_view"
            app:shapeAppearanceOverlay="@style/circleImageView" />

        <ImageButton
            android:id="@+id/note_card_item_menu_image_view"
            style="@style/AppNormalButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/menu_button_description"
            android:src="@drawable/ic_baseline_menu_open_24"
            app:iconTint="@color/full_medium_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/description_material_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_between_elements"
            android:layout_marginEnd="@dimen/padding_between_elements"
            android:minHeight="24dp"
            android:autoLink="web"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toStartOf="@+id/note_card_item_menu_image_view"
            app:layout_constraintStart_toEndOf="@+id/note_priority_indicator_shapeable_image_view"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@sample/posts.json/data/description" />

        <ImageView
            android:id="@+id/divider_image_view"
            android:layout_width="@dimen/line_divider_width"
            android:layout_height="@dimen/line_divider_height"
            android:layout_marginTop="@dimen/padding_between_elements"
            android:background="@color/half_light_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.457"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_material_text_view"
            android:contentDescription="@string/line_divider_description" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/patient_name_label_material_text_view"
            style="@style/SmallLightGreyTextStyle"
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="@dimen/padding_between_elements"
            android:text="@string/note_patient_label"
            android:textAlignment="viewStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_image_view" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/patient_name_material_text_view"
            style="@style/SmallBlackTextStyle"
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAlignment="viewStart"
            app:layout_constraintStart_toStartOf="@+id/patient_name_label_material_text_view"
            app:layout_constraintTop_toBottomOf="@id/patient_name_label_material_text_view"
            tools:text="@sample/posts.json/data/patient" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/executor_name_label_material_text_view"
            style="@style/SmallLightGreyTextStyle"
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/note_executor_label"
            android:textAlignment="viewStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_image_view" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/executor_name_material_text_view"
            style="@style/SmallBlackTextStyle"
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAlignment="viewStart"
            app:layout_constraintStart_toStartOf="@+id/executor_name_label_material_text_view"
            app:layout_constraintTop_toBottomOf="@+id/executor_name_label_material_text_view"
            tools:text="@sample/posts.json/data/executor" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/plan_date_label_material_text_view"
            style="@style/SmallLightGreyTextStyle"
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:layout_marginTop="@dimen/padding_between_elements"
            android:layout_marginStart="@dimen/padding_between_elements"
            android:text="@string/plan_date"
            android:textAlignment="viewStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/executor_name_material_text_view" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/plan_date_material_text_view"
            style="@style/SmallBlackTextStyle"
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:layout_marginBottom="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAlignment="viewStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/plan_date_label_material_text_view"
            app:layout_constraintTop_toBottomOf="@+id/plan_date_label_material_text_view"
            tools:text="@sample/posts.json/data/edited" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/fact_date_label_material_text_view"
            style="@style/SmallLightGreyTextStyle"
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/fact_date"
            android:textAlignment="viewStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/executor_name_material_text_view" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/fact_date_material_text_view"
            style="@style/SmallBlackTextStyle"
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@string/patient_status_is_not_determined"
            android:textAlignment="viewStart"
            app:layout_constraintStart_toStartOf="@+id/fact_date_label_material_text_view"
            app:layout_constraintTop_toBottomOf="@+id/fact_date_label_material_text_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>