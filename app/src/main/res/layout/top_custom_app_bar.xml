<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/execution_priority_low"
    android:padding="@dimen/card_view_padding">

    <ImageButton
        android:id="@+id/main_menu_image_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:layout_gravity="start"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_baseline_menu_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/custom_app_bar_title_text_view"
        style="@style/TopAppBarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_tool_bar_title"
        app:layout_constraintEnd_toStartOf="@id/our_mission_image_button"
        app:layout_constraintStart_toEndOf="@id/main_menu_image_button"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/custom_app_bar_sub_title_text_view"
        style="@style/TopAppBarSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_tool_bar_subtitle"
        app:layout_constraintEnd_toEndOf="@id/custom_app_bar_title_text_view"
        app:layout_constraintStart_toStartOf="@id/custom_app_bar_title_text_view"
        app:layout_constraintTop_toBottomOf="@id/custom_app_bar_title_text_view" />

    <ImageButton
        android:id="@+id/authorization_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_authorization_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/our_mission_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/fmh_logo_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/authorization_image_button"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>