<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".ui.MainFragment">

    <!--Тестовая кнопка. Подлежит удалению при финальной верстке-->
    <Button
        android:id="@+id/toPatientListFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="to List of Patients Fragment" />

    <!--Тестовая кнопка. Подлежит удалению при финальной верстке-->
    <Button
        android:id="@+id/toAddPatientFragmentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="to Add Patient Fragment" />

    <!--Тестовая кнопка. Подлежит удалению при финальной верстке-->
    <Button
        android:id="@+id/toListOfNotesFragmentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="to List of Notes Fragment" />

    <!--Тестовая кнопка. Подлежит удалению при финальной верстке-->
    <Button
        android:id="@+id/btnToAddNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="to Add Note" />

    <!--Тестовая кнопка. Подлежит удалению при финальной верстке-->
    <Button
        android:id="@+id/btnToNoteCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="to Note Card" />


</LinearLayout>