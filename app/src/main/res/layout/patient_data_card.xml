<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/view_patient_data_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/light_grey"
        app:cardCornerRadius="6dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/view_patient_data_card_constraint_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/view_patient_data_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:layout_constraintTop_toTopOf="@+id/view_patient_data_card_constraint_container"
                app:layout_constraintBottom_toBottomOf="@+id/view_patient_data_card_barrier"
                app:layout_constraintStart_toStartOf="@+id/view_patient_data_card_constraint_container"
                android:backgroundTint="@color/grey"
                android:text="@string/patient_data"
                android:textColor="@color/black"
                android:textSize="20sp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/view_patient_data_button_edit"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/view_patient_data_card_constraint_container"
                app:layout_constraintBottom_toBottomOf="@+id/view_patient_data_card_barrier"
                app:layout_constraintEnd_toEndOf="@+id/view_patient_data_card_constraint_container"
                android:background="@android:color/transparent"
                android:contentDescription="@string/editing"
                android:minWidth="14dp"
                android:minHeight="14dp"
                app:icon="@drawable/ic_edit_24"
                app:iconTint="@color/blue"
                />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/view_patient_data_card_barrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="view_patient_data_card_title, view_patient_data_button_edit" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6dp"
                app:cardElevation="10dp"
                app:layout_constraintTop_toBottomOf="@+id/view_patient_data_card_barrier"
                app:layout_constraintStart_toStartOf="@+id/view_patient_data_card_constraint_container"
                app:layout_constraintEnd_toEndOf="@+id/view_patient_data_card_constraint_container"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/view_patient_data_card_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Иванов Иван Иванович"
                        android:textColor="@color/blue"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/patient_data"
                            android:textColor="#8A000000"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/view_patient_data_card_birthday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="19.03.1968"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/room"
                            android:textColor="@color/grey"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/view_patient_data_card_room"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="1/14"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>