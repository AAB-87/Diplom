<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/background"
        android:layout_width="319dp"
        android:layout_height="468dp"
        android:layout_alignParentStart="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="142dp"
        android:background="@drawable/background"
        />

    <TextView
        android:id="@+id/new_patient"
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:text="@string/new_patient"
        android:textFontWeight="500"
        android:textAppearance="@style/new_patient_style"
        android:lineSpacingExtra="2sp"
        android:translationY="-0.76sp"
        android:gravity="center_horizontal|top"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/new_patient_last_name"
        android:layout_width="match_parent"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="118dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:textAppearance="@style/new_patient_name_style"
        android:lineSpacingExtra="5sp"
        android:gravity="center_vertical"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/set_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_patient_last_name"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/new_patient_name"
        android:layout_width="match_parent"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="182dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:textAppearance="@style/new_patient_name_style"
        android:lineSpacingExtra="5sp"
        android:gravity="center_vertical"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/set_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_patient_name"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/new_patient_middle_name"
        android:layout_width="match_parent"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="246dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:textAppearance="@style/new_patient_name_style"
        android:lineSpacingExtra="5sp"
        android:gravity="center_vertical"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/set_middle_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_patient_middle_name"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/new_patient_birth_date"
        android:layout_width="match_parent"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="310dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:textAppearance="@style/new_patient_name_style"
        android:lineSpacingExtra="5sp"
        android:gravity="center_vertical"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/set_birth_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_patient_birth_date"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/cancel_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="408dp"
        android:layout_marginStart="44dp"
        android:lineSpacingExtra="8sp"
        android:gravity="center_horizontal|center_vertical"
        style="@style/cancel_button_style"
        android:backgroundTint="@android:color/white"
        />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/save_button"
        android:layout_marginEnd="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="408dp"
        android:lineSpacingExtra="8sp"
        android:textColor="@color/white"
        android:gravity="center_horizontal|center_vertical"
        style="@style/cancel_button_style"
        />

</androidx.constraintlayout.widget.ConstraintLayout>